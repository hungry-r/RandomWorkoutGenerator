<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:background="#ff41b7c9"
tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise 1"
        android:id="@+id/exercise1"
        android:background="#dedede"
        android:textColor="#292e2e"
        android:onClick="onClickExercise1"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/exercise3"
        android:layout_alignEnd="@+id/exercise3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise 2"
        android:id="@+id/exercise2"
        android:background="#dedede"
        android:textColor="#292e2e"
        android:onClick="onClickExercise2"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/exercise1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/exercise1"
        android:layout_alignEnd="@+id/exercise1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise 3"
        android:id="@+id/exercise3"
        android:background="#dedede"
        android:textColor="#292e2e"
        android:onClick="onClickExercise3"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/exercise2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/exercise4"
        android:layout_alignEnd="@+id/exercise4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise 4"
        android:id="@+id/exercise4"
        android:background="#dedede"
        android:textColor="#292e2e"
        android:onClick="onClickExercise4"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/exercise3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done Exercising"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:id="@+id/doneExercising"
        android:background="#ff9df7b7"
        android:textColor="#292e2e"
        android:onClick="onClickDoneExercising"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>