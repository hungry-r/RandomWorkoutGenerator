<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff41b7c9"
    tools:context=".GeneralGoals">

<TextView android:text="Goal Selection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/goalsScreen"
    android:layout_marginTop="65dp"
    android:gravity="center_horizontal"
    android:textColor="#292e2e"
    android:textSize="44sp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lose Weight"
        android:id="@+id/buttonLoseWeight"
        android:background="#dedede"
        android:textColor="#292e2e"
        android:layout_below="@+id/goalsScreen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickLoseWeight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase Endurance"
        android:id="@+id/buttonIncreaseEndurance"
        android:background="#dedede"
        android:textColor="#292e2e"
        android:layout_below="@+id/buttonLoseWeight"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:onClick="onClickIncreaseEndurance"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase Strength"
        android:id="@+id/buttonIncreaseStrength"
        android:background="#dedede"
        android:textColor="#292e2e"
        android:layout_below="@+id/buttonIncreaseEndurance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:onClick="onClickIncreaseStrength"/>

</RelativeLayout>